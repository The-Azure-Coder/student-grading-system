<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Students List</title>
    <link rel="stylesheet" href="/styles/student.css">
</head>
<body>
  
    <table id="projects">
        <thead>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Class</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <%
               if(data.length) {
                   for (var i = 0; i < data.length; i++) {
            %>
              <tr>
                <td> <%= data[i].id %> </td>
                <td> <%= data[i].first_nm%> </td>
                <td> <%= data[i].last_nm%> </td>
                <td> <%= data[i].class%> </td>
                <td> 
                   <a href="/students/edit/<%= data[i].id %>">Edit</a> 
                   <a href="/students/delete/<%= data[i].id %>">Delete</a> 
                </td>
              </tr>  
              <%
                    }
               } else {    
              %>
              <tr>
                  <td colspan="4">NO STUDENTS DATA!!</td>
              </tr>
              <% } %>
        </tbody>
    </table>
    <div class="add-student">
        <a href="/students/create">
        <i class="fa fa-plus" aria-hidden="true"></i>
        </a>
    </div>

</body>
</html>













